<div class="tought-form-container">
  <a href="/pensamentos/dashboard">Voltar</a>
  <h1>Editando um Pensamento:</h1>

  <form action="/pensamentos/editar" method="post">
    <input type="hidden" name="id" value="{{pensamento.id}}" />
    <div class="form-control">
      <label for="titulo">Pensamento:</label>
      <input
        type="text"
        name="titulo"
        placeholder="Digite o seu pensamento..."
        value="{{pensamento.titulo}}"
      />
    </div>
    <input type="submit" value="Editar pensamento" />
  </form>
</div>